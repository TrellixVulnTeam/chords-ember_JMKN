{{#if onlyUsersArticles}}
  {{yield}}
{{else}}
  <div class="articles-all">
    {{#each model as |article|}}
      <div class="article">
          {{#link-to "articles.detail" article.id}}
          <h2 class="title">
            {{article.title}}
          </h2>
          {{/link-to}}
          <div class="info">
            <div class="category">
              {{#link-to "articles.category.show" article.cat}}<span>kategorie:</span>Kategorie{{/link-to}}
            </div>
            <div class="author">
              {{#link-to "profile.show" article.user}}<span>Autor:</span>{{article.userName}}{{/link-to}}
            </div>
            <div class="date">{{article.createdAt}}</div>
          </div>
          <div class="body">
            {{truncate article.body 40}}
          </div>

      </div>
    {{/each}}
  </div>
{{/if}}
