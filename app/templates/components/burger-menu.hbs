<div class="burger" {{action "toggle"}}>
  {{fa-icon "bars"}}Menu
</div>
{{#if linksVisible}}
  <div class="burger-menu-links">
    {{#unless session.isAuthenticated}}
      <div class="links-block">
        {{#link-to "signup" class="btn btn-small btn-header" click=(action "close")}}Registrace{{/link-to}}
      </div>
    {{/unless}}
    <div class="links-block">
      {{#link-to "index" class="btn-small btn" click=(action "close")}}Domů{{/link-to}}
      {{#link-to "articles.show" class="btn-small btn" click=(action "close")}}Články{{/link-to}}
      {{#if session.isAuthenticated}}
        {{#link-to "articles.new" class="btn-small btn" click=(action "close")}}Nový článek{{/link-to}}
      {{/if}}
    </div>
    <div class="links-block">
      {{#if session.isAuthenticated}}
        <button {{action "signOut"}} class="btn-small btn" >Odhlásit se</button>
      {{/if}}
    </div>


  </div>
{{/if}}
{{yield}}
