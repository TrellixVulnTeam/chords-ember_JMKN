{{#each model as |author|}}
  {{#link-to "song.author.show" author.id class="list image-bg"}}
      <div class="image">
        {{load-image model=author class="image-container"}}
      </div>
      <div class="info">
        <div class="name">
          {{author.name}}
        </div>
        <div class="about">
          {{author.info}}
        </div>
        <div class="count">
          {{author.count}}
        </div>
      </div>
  {{/link-to}}
{{/each}}
