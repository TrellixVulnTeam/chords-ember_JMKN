{{#each filteredArticles as |article|}}
    <div class="list bg">
      {{#link-to "articles.detail" article.id}}
          <div class="info">
            <div class="name">
              {{article.title}}
            </div>
            <div class="count">
              {{#if admin}}
                <div class="admin-panel">
                  <div class="action"{{action "delete" article}}>
                    {{fa-icon "times"}}
                  </div>
                  {{#link-to "articles.edit" article.id class="action"}}
                    {{fa-icon "pencil"}}
                  {{/link-to}}
                </div>
              {{/if}}
            </div>
          </div>
      {{/link-to}}
    </div>
{{/each}}
