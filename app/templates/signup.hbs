<div class="title">
  Registrace
</div>


<form class="">
    <div id="usernameInput" class="input-field  label-floating">
      <input class="form-control form-control-danger" id="email" type="text" placeholder=" ">
        <label class="control-label" for="email">E-mail</label>
        <!--span id="help" class="help-block hidden">Sorry, that email's taken. Try another</span-->
    </div>

     <div id="usernameInput" class="input-field label-floating">
        <input class="form-control form-control-danger" id="username" type="text" placeholder=" ">
        <label class="control-label" for="username">Uživatelské jméno</label>

        <!--span id="help" class="help-block hidden">Sorry, that username's taken. Try another</span-->
    </div>

    <div id="passwordInput" class="input-field  label-floating">
        <input class="form-control" id="password" type="password"/ placeholder=" ">
        <label class="control-label" for="password">Heslo</label>

        <!--span id="helpPass" class="help-block hidden">Password is not secure enough</span-->
    </div>

        <div id="passwordInput" class="input-field  label-floating">
        <input class="form-control" id="password2" type="password"/ placeholder=" ">
        <label class="control-label" for="password2">Heslo pro kontrolu</label>
        <div class="error">
          {{#if error}}
            {{error}}
          {{/if}}
        </div>
<!--span id="helpPass2" class="help-block hidden">Passwords don't match. Try again</span-->
    </div>

    <button {{action 'signUp'}} class="btn btn-primary">Zaregistrovat se</button>
</form>
