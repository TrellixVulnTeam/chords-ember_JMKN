<h1>Nový článek</h1>
{{#if session.isAuthenticated}}
  {{input type="text" value=title class="form-control" placeholder="Post title" autofocus="autofocus"}}
  {{input type="text" value=body class="form-control" placeholder="Post body" autofocus="autofocus"}}
  <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'savePost'}}>Vložit článek</button>
{{else}}
  <p>Pro přidání článku se musíte přihlásit!</p>
{{/if}}
